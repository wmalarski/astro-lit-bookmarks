<dialog-root>
  <slot />
</dialog-root>

<script>
  class DialogRoot extends HTMLElement {
    constructor() {
      super();
    }

    onTriggerClick() {
      const dialog = this.querySelector<HTMLDialogElement>("dialog");
      dialog?.showModal();
    }

    getButton() {
      return this.querySelector<HTMLButtonElement>("[data-dialog-trigger]");
    }

    connectedCallback() {
      this.getButton()?.addEventListener("click", this.onTriggerClick);
    }

    disconnectedCallback() {
      this.getButton()?.removeEventListener("click", this.onTriggerClick);
    }
  }

  customElements.define("dialog-root", DialogRoot);
</script>
