---
import { buttonRecipe } from "@recipes/Button.recipe";

export type Props = {
  title: string;
  text: string;
  url: string;
};

const { url, text, title } = Astro.props;
---

<share-button
  type="button"
  class={buttonRecipe()}
  url={url}
  text={text}
  title={title}
>
  <slot />
</share-button>

<script>
  class ShareBookmarkButton extends HTMLButtonElement {
    constructor() {
      super();
    }

    onShareClick = () => {
      console.log("onShareClick", this);

      navigator.share({
        url: this.getAttribute("url")!,
        text: this.getAttribute("text")!,
        title: this.getAttribute("title")!,
      });
    };

    connectedCallback() {
      console.log("connectedCallback", this);
      this.addEventListener("click", this.onShareClick);
    }

    disconnectedCallback() {
      this.removeEventListener("click", this.onShareClick);
    }
  }

  customElements.define("share-button", ShareBookmarkButton, {
    extends: "button",
  });
</script>
