---
interface Props {
    showDone: boolean;
}

const { showDone } = Astro.props;
---

<form class="container" method="get">
    <label>
        <input name="done" type="checkbox" checked={showDone} />
        Show Done
    </label>
    <button type="submit">Filter</button>
</form>

<style>
    .container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
</style>
