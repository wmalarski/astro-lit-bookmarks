---
import type { tagTable } from "@server/db";
import type { InferSelectModel } from "drizzle-orm";
import CreateTagForm from "./CreateTagForm.astro";
import TagsListItem from "./TagsListItem.astro";

export type Props = {
	tags: InferSelectModel<typeof tagTable>[];
};

const { tags } = Astro.props;
---

<div>
	<CreateTagForm />

	<ul>
		{tags.map((tag) => <TagsListItem tag={tag} />)}
	</ul>
</div>
