{
	"extends": "astro/tsconfigs/strictest",
	"compilerOptions": {
		"experimentalDecorators": true,
		"useDefineForClassFields": false,
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@layouts/*": ["src/layouts/*"],
			"@utils/*": ["src/utils/*"],
			"@server/*": ["src/server/*"],
			"@modules/*": ["src/modules/*"]
		}
	}
}
